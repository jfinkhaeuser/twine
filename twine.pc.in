prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
libdir=${prefix}/lib
includedir=${prefix}/include

Name: twine
Description: Twine is a very small threading library for C++.
Requires: meta >= 1.1
Version: @TWINE_PACKAGE_MAJOR@.@TWINE_PACKAGE_MINOR@
Libs: -L${libdir} -ltwine @CMAKE_THREAD_LIBS_INIT@
Cflags: -I${includedir}
